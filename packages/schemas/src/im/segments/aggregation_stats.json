{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AggregationStats",
  "type": "object",
  "description": "Represent a aggregation of statistics.",
  "properties": {
    "type": {
      "type": "string",
      "description": "The type of the aggregation.",
      "enum": ["aggregation"]
    },
    "name": {
      "type": "string",
      "description": "The name of the aggregation."
    },
    "data": {
      "type": "number",
      "description": "The data of the aggregation."
    }
  },
  "required": ["type", "name", "data"]
}
